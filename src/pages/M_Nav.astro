<style>
    .nav{

        background: #fff;
        margin-bottom: 0;
        color: #1b1412;
        position: fixed;
        bottom: 0;
        z-index: 1070;
        width: 100%;
    }
    .container{
        max-width: 100%;
        padding-left: 24px;
        padding-right: 24px;
        margin-left: auto;
        margin-right: auto;
    }
    .row{
        margin-right: -12px;
        margin-left: -12px;
    }
    .navUp{
        display: flex;
        align-items: center;
        justify-content: space-around;
        padding: 0.4375rem 0;
        height: 3.75rem;
        font-size: 12px;
    }
    .icon{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
.svg{
    color:red;
}
.active{
    color:rgba(255, 0, 0, 0.607);
}
</style>
