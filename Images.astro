---
import LandingHeader from "../components/LandingHeaderBis.astro";

---
<LandingHeader active="gallery"/>
<section  class="header">
  
<div id="bg-cloud">
<canvas id="cvs" width="2600px" height="2500px"></canvas>
</div>

  
<div class="gallery__container">
  <div class="container-file">
      <div class="container-file-1-3">
          <div class="container-file-small">
              <img class="p1" src="../jamon9.jpeg" alt="">
          </div>
          <div class="container-file-small">
              <img class="p1" src="../jamon10.jpeg" alt="">
          </div>
      </div>
      <div class="container-file-2-3">
          <div class="container-file-normal">
              <img src="../jamon3.jpeg" alt="">
          </div>
      </div>
  </div>
  <div class="container-file">
      <div class="container-file-2-3">
          <div class="container-file">
              <div class="container-column-50">
                  <div class="container-file-large">
                      <img src="../jamon8.jpeg" alt="">
                  </div>
              </div>
              <div class="container-column-50">
                  <div class="container-file-small">
                      <img class="p1" src="../jamon11.jpeg" alt="">
                  </div>
                  <div class="container-file-small">
                      <img class="p1" src="../jamon13.jpeg" alt="">
                  </div>
              </div>
          </div>
          <div class="container-file-normal">
              <img src="../jamon6.jpeg" alt="">
          </div>
      </div>
      <div class="container-file-1-3">
          <div class="container-file-small">
              <img class="p1" src="../jamon15.jpeg" alt="">
          </div>
          <div class="container-file-large">
              <img src="../jamon17.jpeg" alt="">
          </div>
          <div class="container-file-small">
              <img class="p1" src="../jamon22.jpeg" alt="">
          </div>
      </div>
  </div>

</div>
       
</section>

<style>
  .header{
    margin-top: 5.625rem;
   
  }
#bg-cloud{
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    position: fixed;
    left: 0;
    top: 0;
    background: url(https://afiladorpro.es/vecteezy_conjunto-de-nubes_21888221.png) no-repeat fixed;
    background-position: -900px -90px;
    animation: moveClouds 420s linear infinite;
}
@keyframes moveClouds {
  0% {
    background-position: -900px -90px;
  }
  100% {
    background-position: 100vw 100vh;
  }
}

#cvs{
  position: absolute;
  width: 2600px;
    weight: 2500px;
    background-color: #ffffffe0;
}  

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    overflow: hidden;
  }
  .p1 {
    
    max-height: 345px;
  }
   .gallery__container {
    position: relative;
    width: 100%;
    margin: auto;
    max-width: 1200px;
    z-index: 1;
}

.container-file {
    display: flex;
}
.container-file-1-3 {
    width: 33.33%;
}
.container-file-2-3 {
    width: 66.66%;
}
.container-file-small, .container-file-normal, .container-file-large {
    padding: 1.2rem;
}
.container-column-50 {
    width: 50%;
}
.container-file-normal, .container-file-large {
    height: 48rem;
}
</style>
